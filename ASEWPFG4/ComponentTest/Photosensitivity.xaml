                <Image HorizontalAlignment="Left"  Source="Photosensitivity_curve.jpg" Width="558" RenderTransformOrigin="0.5,0.5" Margin="9,0,0,3" Height="422" VerticalAlignment="Bottom" >
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="0.313"/>
                            <RotateTransform/>
                            <TranslateTransform X="-0.495"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

            </Grid>
        </Viewbox>
    </ScrollViewer>
</Window>
